/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.index-container{
  padding: 20rpx;
}
.index-container .items{}
.items .item{
  width: 100%;
  border-radius: 8rpx;
  box-shadow: 4rpx 4rpx 6rpx rgba(0,0,0,.2);
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #fff;
}
/** 标题 **/
.item .item__title{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #444;
  padding: 10rpx 0;
}
/** 描述 **/
.item .item__imtro{
  height: 86rpx;
  font-size: 32rpx;
  text-indent: 64rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #707070;
}
/** 图片 **/
.item .item__albums{
  margin: 20rpx 0;
  width: 100%;
  height: 400rpx;
  background-size:cover;
  border-radius: 8rpx;
}
/** 操作 **/
.item .item__btn-group{
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
}
.item .item__btn-group>view{
  flex: 1;
}
.item .item__btn-group>view.btn{
  text-align: left;
}
.item .item__btn-group>view.todetal{
  width: 200rpx;
  font-size: 28rpx;
  color: #8a8a8a;
  text-align: right;
}
.item .item__btn-group button,.item .item__btn-group button::after{
  padding: 0;
  margin: 0;
  border: none;
  border-radius: none;
  background: none;
  width: 45rpx;
  height: 45rpx;
  margin-left: 30rpx;
  float: left;
}
.item .item__btn-group button image{
   width: 100%;
   height: 100%;
   display: block;
}
