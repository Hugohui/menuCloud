/* pages/detail/detail.wxss */
.detail-container{
    padding: 20rpx 20rpx 140rpx 20rpx;
}
.footer{
    height: 120rpx;
    line-height: 120rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
    border-top: 4rpx solid #ccc;
    display: flex;
}
.footer button{
    height: 100%;
    padding: 0;
    margin:0;
    background: none;
    border: none;
    border-radius: none;
    flex: 1;
}
.footer button::after{
    background: none;
    border: none;
    border-radius: none;
}
.footer button image{
    width: 100%;
    height: 100%;
    display: block;
}
.main-info{
    width: 100%;
    height: 450rpx;
    background-size: contain;
    background-repeat: no-repeat;
    background-position:center;
    margin: 20rpx 0;
}
.head-title{
    font-size: 50rpx;
    font-weight: 700;
    color: #4EB196;
    padding-left: 20rpx;
    position: relative;
    margin-left: 15rpx;
}
.need{
    padding: 0 20rpx;
}
.need>view{
    margin: 10rpx 0;
}
.head-title::after{
    content: "";
    display: block;
    width: 8rpx;
    height: 40rpx;
    background: #4EB196;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}
.step{

}
.step .step-title{
    font-size: 46rpx;
    font-weight: 700;
    margin: 20rpx 0;
    padding: 0 20rpx;
}

.step .step-img{
    width: 100%;
    height: 500rpx;
    background-size: contain;
    background-repeat: no-repeat;
    background-position:center;
}